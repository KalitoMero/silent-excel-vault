
{
  "appId": "com.silent-excel-vault.app",
  "productName": "Silent Excel Vault",
  "files": [
    "dist/**/*",
    "electron/**/*"
  ],
  "directories": {
    "buildResources": "assets",
    "output": "electron-dist"
  },
  "mac": {
    "category": "public.app-category.productivity",
    "target": ["zip"]
  },
  "win": {
    "target": ["portable"]
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Office"
  },
  "npmRebuild": false,
  "buildDependenciesFromSource": true,
  "nodeGypRebuild": false
}
